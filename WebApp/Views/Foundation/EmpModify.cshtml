@{
    ViewBag.Title = "EmpModify";
}
@model AR2AP.WebApp.Models.Foundation.EmpModifyVModel
@using (Html.BeginForm()) {
    <fieldset>
        <legend></legend>
        <ol>
            <li>
                @Html.HiddenFor(m => m.EmpEntity.EmpID)
            </li>
            <li>
                @Html.LabelFor(m => m.EmpEntity.EmpName)
                @Html.TextBoxFor(m => m.EmpEntity.EmpName)
                @Html.ValidationMessageFor(m => m.EmpEntity.EmpName)
            </li>
            <li>
                @Html.LabelFor(m => m.EmpEntity.EmpEmail)
                @Html.TextBoxFor(m => m.EmpEntity.EmpEmail)
                @Html.ValidationMessageFor(m => m.EmpEntity.EmpEmail)
            </li>
            <li>
                @Html.LabelFor(m => m.EmpEntity.Username)
                @Html.TextBoxFor(m => m.EmpEntity.Username)
                @Html.ValidationMessageFor(m => m.EmpEntity.Username)
            </li>
            <li>
                @Html.LabelFor(m => m.EmpEntity.Password)
                @Html.PasswordFor(m => m.EmpEntity.Password)
                @Html.ValidationMessageFor(m => m.EmpEntity.Password)
            </li>
        </ol>
        <input type="submit" value="Save" />
    </fieldset>
}
